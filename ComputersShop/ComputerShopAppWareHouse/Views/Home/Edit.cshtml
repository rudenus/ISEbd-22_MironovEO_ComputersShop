@using ComputerShopBusinessLogic.ViewModels
@model WareHouseViewModel

@{ ViewData["Title"] = "Edit"; }

<h1>Изменить</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="WareHouseMaterials" value="@Model.WareHouseComponents" />
            <div class="form-group">
                <label class="control-label" name="WareHouseName">Название</label>
                <input class="form-control" name="WareHouseName" value="@Model.WareHouseName" />
            </div>
            <div class="form-group">
                <label class="control-label" name="NameOfResponsiblePerson">ФИО ответственного</label>
                <input class="form-control" name="NameOfResponsiblePerson" value="@Model.ResponsiblePersonFIO" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Материал
                    </th>
                    <th>
                        Количество
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.WareHouseComponents)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Value.Item1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value.Item2)
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</div>