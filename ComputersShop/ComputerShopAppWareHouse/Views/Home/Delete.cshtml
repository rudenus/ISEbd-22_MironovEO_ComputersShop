@using ComputerShopBusinessLogic.ViewModels
@model WareHouseViewModel

@{ ViewData["Title"] = "Delete"; }

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить эту запись?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-6">
            <dl class="row">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.WareHouseName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WareHouseName)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.ResponsiblePersonFIO)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ResponsiblePersonFIO)
                </dd>
            </dl>
            <form method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" /> |
                <a asp-action="Index">Назад</a>
            </form>
        </div>
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Компонент
                        </th>
                        <th>
                            Количество
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.WareHouseComponents)
                    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value.Item1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value.Item2)
            </td>
        </tr>}
                </tbody>
            </table>
        </div>
    </div>